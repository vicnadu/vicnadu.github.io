---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div class="mb-5 flex justify-center items-center font-specialelite">
    <div class="text-3xl font-bold pt-12 pb-6">Projects</div>
  </div>

  <div class="mb-5 flex justify-center items-center font-specialelite">
    <div class="text-2xl font-bold pt-12 pb-6">Graphic Design</div>
  </div>

  <HorizontalCard
    title="Wampyr"
    img="/wampyr.png"
    desc="Black Metal Magazine"
    url="#"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Martin"
    img="/martin.png"
    desc="Alternate Movie Poster"
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Egoist Anarchism"
    img="/egoistanarchism.png"
    desc="Fictional political poster"
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Revolutionary Communists of America"
    img="/communists.png"
    desc="Fictional political poster"
    url="#"
  />

</BaseLayout>
